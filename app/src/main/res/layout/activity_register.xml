<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/splash3"
    tools:context=".register">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/linyer5"
        >
        <EditText
            android:id="@+id/edt_name_regis"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/custom_name_icon"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Name"
            android:inputType="text"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edt_email_regis"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/custom_email_icon"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edt_password_regis"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/custom_lock_icon"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/colorPrimary"
            android:hint="Password"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edt_phone_regis"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/custom_phone_icon"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:hint="Phone"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>


        <Button
            android:id="@+id/btn_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="sign up"
            android:background="@drawable/btn"
            android:textColor="@color/splash2"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Have Account ? "
                android:textColor="@color/idel4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView


                android:id="@+id/tv_back_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Login "
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

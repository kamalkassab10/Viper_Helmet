<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/splash3"/>
            <corners android:topRightRadius="50dp"
                android:topLeftRadius="15dp" android:bottomRightRadius="15dp"
                android:bottomLeftRadius="50dp"/>
            <stroke android:width="2dp" android:color="@color/splash3"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/splash4"/>
            <corners android:topRightRadius="50dp"
                android:topLeftRadius="15dp" android:bottomRightRadius="15dp"
                android:bottomLeftRadius="50dp"/>
            <stroke android:width="2dp" android:color="@color/splash2"/>
        </shape>
    </item>

</selector>